<div class="news">
  {% if site.latest_posts != blank %}
    {% assign latest_posts_size = site.posts | size %}
    <div
      class="table-responsive"
      {% if site.latest_posts.scrollable and latest_posts_size > 3 %}
        style="max-height: 60vw;"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign latest_posts = site.posts %}
        {% if site.latest_posts.limit %}
          {% assign latest_posts_limit = site.latest_posts.limit %}
        {% else %}
          {% assign latest_posts_limit = latest_posts_size %}
        {% endif %}
        {% for item in latest_posts limit: latest_posts_limit %}
          <tr>
            <td style="width: 20%;">
              <strong>Date:</strong> {{ item.date | date: '%b %d, %Y' }} - {{ item.enddate | date: '%b %d, %Y' }}
            </td>
          </tr>
          <tr>
            <td>
              <strong>Title:</strong> 
              {% if item.redirect == blank %}
                <a href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% elsif item.redirect contains '://' %}
                <a href="{{ item.redirect }}" target="_blank">{{ item.title }}</a>
              {% else %}
                <a href="{{ item.redirect | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
          <tr>
            <td>
              <strong>Abstract:</strong> {{ item.abstract }}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No posts so far...</p>
  {% endif %}
</div>
